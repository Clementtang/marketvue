# MarketVue Backend Environment Variables
# Copy this file to .env for local development

# ==============================================================================
# Flask Configuration
# ==============================================================================

# Environment: development | production
FLASK_ENV=development

# Debug mode (should be False in production!)
FLASK_DEBUG=True

# CRITICAL: SECRET_KEY for Flask session encryption
# ⚠️  WARNING: Never use the default value in production!
# ⚠️  Generate a secure key: python -c 'import secrets; print(secrets.token_hex(32))'
# Minimum 32 characters required
SECRET_KEY=your-secret-key-here-must-be-at-least-32-chars-long-change-in-production

# Server port
PORT=5000

# ==============================================================================
# CORS Settings (Cross-Origin Resource Sharing)
# ==============================================================================

# Comma-separated list of allowed origins
# Development: Can include localhost
# Production: MUST only include production URLs (no localhost!)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production example:
# CORS_ORIGINS=https://marketvue.vercel.app,https://marketvue-staging.vercel.app

# ==============================================================================
# Cache Settings
# ==============================================================================

# Cache backend: SimpleCache | RedisCache | MemcachedCache
CACHE_TYPE=SimpleCache

# Default cache timeout (seconds)
CACHE_DEFAULT_TIMEOUT=300

# News cache timeout (seconds)
CACHE_NEWS_TIMEOUT=900

# ==============================================================================
# Rate Limiting
# ==============================================================================

# Rate limit storage: memory:// | redis://localhost:6379
RATELIMIT_STORAGE_URL=memory://

# Default rate limit per endpoint
RATELIMIT_DEFAULT=100 per hour

# ==============================================================================
# Stock API Settings
# ==============================================================================

# Maximum number of stocks per batch request
MAX_BATCH_STOCKS=9

# Default period for stock data queries
DEFAULT_STOCK_PERIOD=1mo

# ==============================================================================
# Logging
# ==============================================================================

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ==============================================================================
# Production Deployment Checklist
# ==============================================================================
# Before deploying to production, ensure:
#
# ✅ SECRET_KEY is set to a strong random value (64+ characters)
# ✅ FLASK_ENV=production
# ✅ FLASK_DEBUG=False
# ✅ CORS_ORIGINS contains only production URLs (no localhost)
# ✅ All sensitive values are properly configured
# ✅ LOG_LEVEL=INFO or higher
#
# Generate SECRET_KEY:
#   python -c 'import secrets; print(secrets.token_hex(32))'
#
# Validate configuration:
#   python -c "from config import config; c = config['production']()"
# ==============================================================================
